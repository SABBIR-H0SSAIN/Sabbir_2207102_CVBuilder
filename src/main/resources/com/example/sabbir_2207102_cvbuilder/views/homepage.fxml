<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sabbir_2207102_cvbuilder.controllers.HomePageController">
    <center>
        <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0" prefWidth="850.0">
            <children>
                <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <VBox alignment="CENTER">
                            <children>
                                <Text fill="#032c94" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome to the CV Builder">
                                    <font>
                                        <Font name="Berlin Sans FB" size="38.0" />
                                    </font>
                                </Text>
                                <Text fill="#2146c0" strokeType="OUTSIDE" strokeWidth="0.0" text="Build and manage your CVs" textAlignment="CENTER">
                                    <font>
                                        <Font name="Corbel" size="21.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="12.0" />
                                    </VBox.margin>
                                </Text>
                            </children>
                        </VBox>
                        <HBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Button fx:id="goToCvFormPageButton" mnemonicParsing="false" onAction="#goToCVFormPageAction" style="-fx-background-color: rgb(142,81,255); -fx-border-radius: 20px; -fx-background-radius: 20px;" text="Create New CV" textAlignment="CENTER" textFill="#fbfbfb">
                                    <font>
                                        <Font name="Comic Sans MS Bold" size="15.0" />
                                    </font>
                                    <padding>
                                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                    </padding>
                                    <effect>
                                        <Glow />
                                    </effect>
                                </Button>
                                <Button fx:id="refreshCVsButton" mnemonicParsing="false" onAction="#onRefreshCVsAction" style="-fx-background-color: rgb(45,156,219); -fx-border-radius: 20px; -fx-background-radius: 20px;" text="Refresh List" textAlignment="CENTER" textFill="#fbfbfb">
                                    <font>
                                        <Font name="Comic Sans MS Bold" size="15.0" />
                                    </font>
                                    <padding>
                                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                    </padding>
                                </Button>
                            </children>
                        </HBox>
                        <ProgressIndicator fx:id="progressIndicator" visible="false" />
                        <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Text fill="#032c94" strokeType="OUTSIDE" strokeWidth="0.0" text="Recently Generated CV's:">
                                    <font>
                                        <Font name="Arial Bold" size="18.0" />
                                    </font>
                                </Text>
                                <ListView fx:id="cvListView" prefHeight="280.0" VBox.vgrow="ALWAYS" />
                                <HBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Button fx:id="editCVButton" mnemonicParsing="false" onAction="#onEditCVAction" style="-fx-background-color: rgb(255,140,0); -fx-border-radius: 15px; -fx-background-radius: 15px;" text="Edit" textAlignment="CENTER" textFill="#fbfbfb">
                                            <font>
                                                <Font name="Comic Sans MS Bold" size="14.0" />
                                            </font>
                                            <padding>
                                                <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
                                            </padding>
                                        </Button>
                                        <Button fx:id="deleteCVButton" mnemonicParsing="false" onAction="#onDeleteCVAction" style="-fx-background-color: rgb(231,76,60); -fx-border-radius: 15px; -fx-background-radius: 15px;" text="Delete" textAlignment="CENTER" textFill="#fbfbfb">
                                            <font>
                                                <Font name="Comic Sans MS Bold" size="14.0" />
                                            </font>
                                            <padding>
                                                <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
                                            </padding>
                                        </Button>
                                        <Button fx:id="previewCVButton" mnemonicParsing="false" onAction="#onPreviewCVAction" style="-fx-background-color: rgb(52,152,219); -fx-border-radius: 15px; -fx-background-radius: 15px;" text="Preview" textAlignment="CENTER" textFill="#fbfbfb">
                                            <font>
                                                <Font name="Comic Sans MS Bold" size="14.0" />
                                            </font>
                                            <padding>
                                                <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
                                            </padding>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </center>
</BorderPane>